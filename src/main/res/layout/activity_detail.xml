<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <androidx.constraintlayout.widget.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guideline14"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.35"/>

    <androidx.constraintlayout.widget.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guideline19"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.45"/>

    <androidx.constraintlayout.widget.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guideline18"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.05"/>

    <androidx.constraintlayout.widget.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guideline15"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.95"/>

    <androidx.constraintlayout.widget.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guideline16"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.45"/>

    <androidx.constraintlayout.widget.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guideline17"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.05"/>

    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:srcCompat="@drawable/pic_1"
            android:id="@+id/d_poster"
            android:layout_margin="10dp"
            app:layout_constraintBottom_toTopOf="@+id/guideline14"
            app:layout_constraintTop_toTopOf="@+id/guideline18"
            app:layout_constraintEnd_toStartOf="@+id/guideline16"
            app:layout_constraintStart_toStartOf="@+id/guideline17"
            android:contentDescription="@string/poster"/>

    <ImageView
            android:layout_width="0dp"
            android:layout_height="5dp"
            app:srcCompat="@color/colorPrimaryDark"
            android:id="@+id/imageView2"
            app:layout_constraintBottom_toTopOf="@+id/textView2"
            app:layout_constraintTop_toTopOf="@+id/guideline14"
            app:layout_constraintStart_toStartOf="@+id/guideline17"
            app:layout_constraintEnd_toStartOf="@+id/guideline15"/>

    <ImageView
            android:layout_width="0dp"
            android:layout_height="1dp"
            app:srcCompat="@color/colorPrimaryDark"
            android:id="@+id/imageView3"
            app:layout_constraintStart_toStartOf="@+id/guideline17"
            app:layout_constraintEnd_toStartOf="@+id/guideline15"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintBottom_toTopOf="@+id/guideline19"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@+id/textView2"/>



    <Button
            android:text="Buy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_d_buy"
            android:layout_margin="5dp"
            android:background="@drawable/button_circle_shape"
            app:layout_constraintEnd_toStartOf="@+id/guideline15"
            app:layout_constraintBottom_toTopOf="@+id/guideline14"/>

    <Button
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@drawable/heart"
            android:id="@+id/btn_d_heart"
            android:layout_margin="5dp"
            app:layout_constraintBottom_toTopOf="@+id/guideline14"
            app:layout_constraintEnd_toStartOf="@+id/btn_d_buy"
            app:layout_constraintStart_toStartOf="@+id/guideline16"/>

    <TextView
            android:text="Brief Introduction"
            android:textSize="20dp"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            app:layout_constraintStart_toStartOf="@+id/guideline17"
            app:layout_constraintTop_toBottomOf="@+id/imageView2"
            app:layout_constraintTop_toTopOf="@+id/guideline14"
            app:layout_constraintBottom_toTopOf="@+id/guideline19"/>

    <TextView
            android:text="A working-class Italian-American bouncer becomes the driver of an African-American classical pianist on a tour of venues through the 1960s American South."
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:id="@+id/d_info"
            android:textSize="20dp"
            android:scrollbars = "vertical"
            app:layout_constraintTop_toTopOf="@+id/guideline19"
            app:layout_constraintStart_toStartOf="@+id/guideline17"
            app:layout_constraintEnd_toStartOf="@+id/guideline15"/>

    <TextView
            android:text="Movie Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/d_title"
            android:layout_marginTop="10dp"
            android:textSize="20dp"
            android:textColor="#000000"
            app:layout_constraintTop_toTopOf="@+id/guideline18"
            app:layout_constraintStart_toStartOf="@+id/guideline16"
            />

    <TextView
            android:text="109 mins/ Comedy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/d_time_type"
            android:textSize="15dp"
            app:layout_constraintStart_toStartOf="@+id/guideline16"
            app:layout_constraintTop_toBottomOf="@+id/d_title"/>

    <TextView
            android:text="Release: 24th March, 2020"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/d_release"
            android:textSize="15dp"
            app:layout_constraintStart_toStartOf="@+id/guideline16"
            app:layout_constraintTop_toBottomOf="@+id/d_time_type"/>

    <TextView
            android:text="Director: xxx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/d_director"
            android:textSize="15dp"
            app:layout_constraintStart_toStartOf="@+id/guideline16"
            app:layout_constraintTop_toBottomOf="@+id/d_release"/>

    <TextView
            android:text="Actors: xxx  xxx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/d_actor"
            android:textSize="15dp"
            app:layout_constraintStart_toStartOf="@+id/guideline16"
            app:layout_constraintTop_toBottomOf="@+id/d_director"/>

</androidx.constraintlayout.widget.ConstraintLayout>